{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@common/*": ["common/*"],
      "@module/*": ["module/*"],
      "@util/*": ["common/util/*"]
    }
  },
  "exclude": ["node_modules"]
}
